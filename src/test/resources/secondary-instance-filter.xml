<?xml version="1.0"?>
<h:html xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa"
    xmlns:odk="http://www.opendatakit.org/xforms" xmlns="http://www.w3.org/2002/xforms">
    <h:head>
        <h:title>Secondary instance filter</h:title>
        <model odk:xforms-version="1.0.0">
            <instance>
                <data id="secondary-instance-filter" version="1">
                    <choice />
                    <calculate />
                </data>
            </instance>
            <instance id="instance">
                <root>
                    <item>
                        <label>A</label>
                        <name>a</name>
                    </item>
                    <item>
                        <label>B</label>
                        <name>b</name>
                    </item>
                </root>
            </instance>
            <bind nodeset="/data/choice" type="string" />
            <bind calculate="instance('instance')/root/item[name = /data/choice]/label"
                nodeset="/data/calculate" type="string" />
            <bind calculate="instance('instance')/root/item[name = /data/choice]/name"
                  nodeset="/data/calculate" type="string" />
        </model>
    </h:head>
    <h:body>
        <select1 ref="/data/choice">
            <label>Choice</label>
            <itemset nodeset="instance('instance')/root/item[name = /data/choice]/label">
                <value ref="name"/>
                <label ref="label"/>
            </itemset>
        </select1>
    </h:body>
</h:html>
